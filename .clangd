CompileFlags:
  # Add:
  # - "-Wno-unknown-warning-option"
  # - "-std=c++23"
  # - "-stdlib=libc++"
  #   - "-Wall"
  #   - "-Wextra"
  #   - "-Wno-missing-prototypes"
  #   - "-fmodules"
  #   - "-stdlib=libc++"
  #   - "-fbuiltin-module-map"
  #   - "-fimplicit-module-maps"
  Compiler: clang++

Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: Strict
  ClangTidy:
    Add:
      - "abseil-*"
      # - "altera-*"
      - "android-*"
      - "cert-*"
      - "clang-analyzer-*"
      - "cppcoreguidelines-*"
      # - "fuchsia-*"
      - "google-*"
      - "llvm*"
      - "modernize-*"
      - "performance-*"
      - "zircon-*"
      - "bugprone-*"
      - "readability-*"
    Remove:
      - "modernize-use-trailing-return-type"
      - llvmlibc-implementation-in-namespace
      - llvmlibc-callee-namespace
      - llvmlibc-restrict-system-libc-headers
      - llvmlibc-inline-function-decl
      - cppcoreguidelines-avoid-magic-numbers
      - readability-magic-numbers
  Suppress:
    - "missing-includes"
    - "unused-includes"
# If you are using GCC 12 (default in the container) but clangd is parsing,
# sometimes you need to remove GCC-specific flags that clangd doesn't understand.
# Remove:
#   - "-fno-fat-lto-objects"
# Point clangd to your CMake build folder so it finds headers correctly
# The VS Code CMake Tools extension usually builds into "build"
# CompilationDatabase: build