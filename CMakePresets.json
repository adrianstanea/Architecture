{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 4,
    "minor": 2,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "CMAKE_CXX_STANDARD": "23",
        "GLFW_BUILD_WAYLAND": false,
        "GLFW_BUILD_X11": true,
        "OpenGL_GL_PREFERENCE": "GLVND"
      },
      "environment": {
        "LIBGL_ALWAYS_SOFTWARE": "1"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "hidden": true,
      "description": "Debug Builds",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "hidden": true,
      "description": "Release Builds",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "msvc",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ]
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux",
      "hidden": true,
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Linux"
          ]
        }
      },
      "cacheVariables": {
        "CMAKE_SHARED_LINKER_FLAGS": "-Wl,-Bsymbolic"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "clang",
      "inherits": "linux",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_STDLIB_MODULES_JSON": "/usr/lib/llvm-21/lib/libc++.modules.json"
      },
      "environment": {
        "CC": "/usr/bin/clang",
        "CXX": "/usr/bin/clang++"
      }
    },
    {
      "name": "gcc",
      "inherits": "linux",
      "hidden": true,
      "cacheVariables": {},
      "environment": {
        "CC": "/usr/bin/gcc",
        "CXX": "/usr/bin/g++"
      }
    },
    {
      "name": "msvc-debug",
      "inherits": [
        "msvc",
        "debug"
      ],
      "cacheVariables": {}
    },
    {
      "name": "msvc-release",
      "inherits": [
        "msvc",
        "release"
      ],
      "cacheVariables": {}
    },
    {
      "name": "clang-debug",
      "inherits": [
        "clang",
        "debug"
      ],
      "cacheVariables": {}
    },
    {
      "name": "clang-release",
      "inherits": [
        "clang",
        "release"
      ],
      "cacheVariables": {}
    },
    {
      "name": "gcc-debug",
      "inherits": [
        "gcc",
        "debug"
      ],
      "cacheVariables": {}
    },
    {
      "name": "gcc-release",
      "inherits": [
        "gcc",
        "release"
      ],
      "cacheVariables": {}
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "hidden": true,
      "verbose": true,
      "nativeToolOptions": [
        "-k",
        "0"
      ]
    },
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug",
      "inherits": "base"
    },
    {
      "name": "msvc-release",
      "configurePreset": "msvc-release",
      "inherits": "base"
    },
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug",
      "inherits": "base"
    },
    {
      "name": "clang-release",
      "configurePreset": "clang-release",
      "inherits": "base"
    },
    {
      "name": "gcc-debug",
      "configurePreset": "gcc-debug",
      "inherits": "base"
    },
    {
      "name": "gcc-release",
      "configurePreset": "gcc-release",
      "inherits": "base"
    }
  ]
}